{
  "name": "lifesource.ua",
  "description": "LifeSource.UA on React",
  "author": "Sergey Sadovoi <sergey@hope.ua>",
  "version": "2.0.0-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "license": "MIT",
  "main": "bin/server.js",
  "scripts": {
    "start": "better-npm-run start-prod",
    "build": "better-npm-run build",
    "__postinstall": "npm run build",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-js": "eslint src",
    "lint-css": "scss-lint -c .sass-lint.yml",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "better-npm-run watch-client",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "palette": "NODE_ENV=development NODE_PATH=./src node -r babel-register ./bin/palette.js"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "hope",
    "env": {
      "browser": true
    },
    "globals": {
      "__DEVELOPMENT__": true,
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DISABLE_SSR__": false,
      "__DEVTOOLS__": true,
      "webpackIsomorphicTools": true,
      "fetch": true
    },
    "rules": {
      "react/prefer-stateless-function": "off"
    }
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "better-npm-run": "0.0.14",
    "body-parser": "^1.14.1",
    "classnames": "^2.2.3",
    "clean-webpack-plugin": "^0.1.6",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.26.1",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "lru-memoize": "^1.0.0",
    "map-props": "^1.0.0",
    "merge": "^1.2.0",
    "moment": "^2.12.0",
    "node-sass": "^4.3.0",
    "piping": "1.0.0-rc.4",
    "postcss-loader": "^1.2.2",
    "postcss-scss": "^0.4.0",
    "pretty-error": "^2.0.0",
    "prop-types": "^15.5.10",
    "raw-loader": "^0.5.1",
    "react": "^15.5.4",
    "react-addons-css-transition-group": "^15.0.1",
    "react-dom": "^15.5.4",
    "react-google-tag-manager": "^1.1.0",
    "react-helmet": "^4.0.0",
    "react-inline-css": "^2.0.0",
    "react-maskedinput": "^3.1.2",
    "react-motion": "^0.4.7",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.2",
    "redux": "^3.4.0",
    "redux-actions": "^1.2.1",
    "redux-connect": "^5.0.0",
    "redux-promise": "^0.5.3",
    "redux-responsive": "^4.1.1",
    "sass-loader": "^4.1.1",
    "scroll-behavior": "^0.3.4",
    "serialize-javascript": "^1.1.2",
    "string": "^3.3.1",
    "strip-loader": "^0.1.0",
    "style-loader": "^0.13.1",
    "urijs": "^1.17.1",
    "url-loader": "^0.5.7",
    "warning": "^3.0.0",
    "webpack": "^1.12.15",
    "webpack-isomorphic-tools": "^2.2.44"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-typecheck": "^3.6.0",
    "concurrently": "^3.1.0",
    "eslint-config-hope": "^3.1.0",
    "eslint-loader": "^1.0.0",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.1.1",
    "redux-devtools": "^3.1.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.5.0"
  }
}
